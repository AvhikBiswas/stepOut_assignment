{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",  // Ensure this is set
    "baseUrl": "/client",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  
  "include": ["src"],
  "exclude": ["node_modules"]
}
